<%= form_for @reservation, url: {action: "create"} do |f| %>
  <% if @reservation.errors.any? %>
    <div id= "error_explanation">
    <h2> <%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved: </h2>
    <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :date %><br />
    <%= select_date Date.today, prefix: :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= select_hour Time.current, prefix: :time %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.select :size, (1..10) %>
  </div>
  <div class="field">
    <%= label_tag :neighbourhood %><br/>
    <%= select_tag :neighbourhood_id,  options_for_select(@neighbourhoods.collect{ |n| [n.name, n.id] }) %>
  </div>
  <div class="actions"><br/>
    <%= f.submit %>
  </div>
<% end %>

